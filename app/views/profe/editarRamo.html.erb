

	<%= form_for(:editar_ramo, :url => "/profe/editarRamo") do |f| %>

		<label>sigla</label>
		<%= f.text_field :sigla%>
		<br>
		<label>nombre</label>
		<%= f.text_field :nombre%>
		<br>
		<label>cantidad de ayudantes</label>
		<%= f.text_field :cant_ayudantes%>
		<br>
		<label>tipo de ayundates</label>
		<%= f.text_field :tipo_ayudante%>
		<br>
		<label>criterio</label>
		<%= f.text_field :sigla%>
		<br>


		<div class="col-md-2 col-md-offset-3">
			<label>Nombre</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course_modification[nombre]" size="30" value=<%= @curso.nombre %> >
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Profesor</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course[profesor]" size="30" value=<%= @curso.profesor %> disabled>
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Cantidad de Ayudantes</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course_modification[cant_ayudantes]" size="30" value=<%= @curso.cant_ayudantes %> >
		</div>
	</div>
	<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Tipo Ayudante</label>
		</div>
		<div class="col-md-1">
			<% if  @curso.tipo_ayudante.include? "catedra"%>
				<%= check_box_tag(:catedra,1, true, :class => "checkbox")%>
			<% else %>
				<%= check_box_tag(:catedra,1, false, :class => "checkbox")%>
			<% end %>
		</div>
		 Catedra
	</div>
	
		<div class="col-md-1 col-md-offset-5">
			<% if  @curso.tipo_ayudante.include? "laboratorio"%>
				<%= check_box_tag(:laboratorio,1, true, :class => "checkbox")%>
			<% else %>
				<%= check_box_tag(:laboratorio,1, false, :class => "checkbox")%>
			<% end %> 
		</div>Laboratorio
	</div>
	
		<div class="col-md-1 col-md-offset-5">
			<% if  @curso.tipo_ayudante.include? "correccion"%>
				<%= check_box_tag(:correccion,1, true, :class => "checkbox")%> 
			<% else %>
				<%= check_box_tag(:correccion,1, false, :class => "checkbox")%>
			<% end %>
		</div>Corrección
	</div>	
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Campus</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course[campus]" size="30" value=<%= @curso.campus %> disabled>
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Departamento</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course[departamento]" size="30" value=<%= @curso.departamento %> disabled>
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Área</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course[area]" size="30" value=<%= @curso.area %> disabled>
			<input type="hidden" name="course_modification[target]" value=<%= @curso.id %> >
			<input type="hidden" name="course_modification[profesor]" value=<%= @profesor.nombre %> >
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Creditos</label>
		</div>
		<div class="col-md-4">
			<input class="form-control" name="course[creditos]" size="30" value=<%= @curso.creditos %> disabled>

		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-3">
			<label>Criterio</label>
		</div>
		<div class="col-md-5">
			<%= text_area_tag "course_modification[criterio]", @curso.criterio , :class => "form-control" %>
		</div>
	</div>
		<br>		
	
		<div class="col-md-2 col-md-offset-3">
			<label>Activo</label>
		</div>
		<div class="col-md-4">
			<input class="hidden" name="course[activo]" value="false">
			<input type="checkbox" name="course[activo]" value="true"<%= "checked" if @curso.activo %> disabled>
		</div>
	</div>
		<br>
	
		<div class="col-md-2 col-md-offset-6">
			<button class="btn btn-success col-md-12" type="submit">Editar</button>
		</div>
	</div>
	<br>
	<div class="panel-group" id="accordion">
			<h4 class="panel-title">
			
				<div class="col-md-2 col-md-offset-5">
	       		 <a data-toggle="collapse" class="btn btn-primary col-md-12" data-parent="#accordion" href="#collapseOne"> Opción avanzada      </a>
	        	</div>
				<div class="col-md-2">
				<a href= "/administracion/cursos" class="btn btn-primary col-md-12">Volver</a>
				</div>
			</div>
	      	</h4>
	 	<br>
	    <div id="collapseOne" class="panel-collapse collapse">
		<div class="panel-body">
			
				<div class="col-md-3 col-md-offset-1">
					<h3><span class="label label-warning">Mail a enviar</span></h3>
				</div>
			</div>
			<br>
			
				<div class="col-md-7 col-md-offset-1">
					<label>Este es el correo que se enviara notificando al administrador, modifiquelo si estima conveniente.</label>
				</div>
			</div>
			<br>
			
				<div class="col-md-2 col-md-offset-3">
					<label>Asunto</label>
				</div>
				<div class="col-md-4">
					<%= text_field_tag :mailSubject, @mail.subject , :class => "form-control" %>
				</div>
			</div>
			<br>
			
				<div class="col-md-2 col-md-offset-3">
					<label>Contenido</label>
				</div>
				<div class="col-md-5">
					<%= text_area_tag :mailBody, @mail.body , :class => "form-control" %>
				</div>
			</div>
		</div>
		</div>
	</div>
	<br>
<% end %>


