

	<%= form_for(:editar_ramo, :url => "/profe/editarRamo") do |f| %>

		<label>sigla</label>
		<%= f.text_field :sigla, :value => @ramo.sigla %>
		<br>
		<label>nombre</label>
		<%= f.text_field :nombre, :value => @ramo.nombre %>
		<br>
		<label>cantidad de ayudantes</label>
		<%= f.number_field :cant_ayudantes, :value => @ramo.cant_ayudantes %>
		<br>
		<label>tipo de ayundates</label>
		<%= f.text_field :tipo_ayudante, :value => @ramo.tipo_ayudante %>
		<br>
		<label>criterio</label>
		<%= f.text_field :critero, :value => @ramo.critero %>
		<%= f.hidden_field :id_ramo, :value => @ramo.id %>
		<br>
		<%= f.submit "Enviar solicitud de cambio" %>

<% end %>


